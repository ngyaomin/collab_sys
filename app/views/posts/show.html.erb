
  <h3>
    Title: <%= @post.title %>
  </h3>
  <p>
    Topic:  <%= @post.topic %>
  </p>
  <p>
    Content: <%= @post.content %>
  </p>
  <%= link_to 'edit', edit_post_path(@post) %>
  <%= link_to 'delete', post_path(@post),
              method: :delete,
              data: { confirm: 'Are you sure?' } %>
